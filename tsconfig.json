{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2017",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": ["src"]
}
